<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Dark Theme -->
    <style name="Theme.AppCompat" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize dark theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/darkBackground</item>
        <!-- Add other dark theme customizations -->
    </style>

    <!-- Light Theme -->
    <style name="Theme.AppCompat.Light" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize light theme here -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/lightBackground</item>
        <!-- Add other light theme customizations -->
    </style>
</resources>
