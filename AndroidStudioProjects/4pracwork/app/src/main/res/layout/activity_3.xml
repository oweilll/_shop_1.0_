<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#808080"
    >


    <EditText
        android:id="@+id/day"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/skrugl"
        android:hint="Выберите день"
        android:textAlignment="center"
        android:textColorHint="#FFDEAD"
        android:textColor="#FFDEAD"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/time"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/skrugl"
        android:hint="Выберите время"
        android:textAlignment="center"
        android:textColorHint="#FFDEAD"
        android:textColor="#FFDEAD"
        android:layout_marginBottom="5dp"
        />
    <EditText
        android:id="@+id/comment"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:background="@drawable/skrugl"
        android:hint="Добавьте комментарий"
        android:textAlignment="center"
        android:textColorHint="#FFDEAD"
        android:textColor="#FFDEAD"
        android:layout_marginBottom="10dp"
        />
    <Button
        android:id="@+id/zapis"
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:text="Ок"
        android:textColor="#FFDEAD"
        android:backgroundTint="#2F4F4F"
        />




</LinearLayout>
