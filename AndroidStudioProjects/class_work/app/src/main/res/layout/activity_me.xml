<!-- relative_layout_example.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".me_activity">

    <TextView
        android:id="@+id/card_num_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card Num"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/cvv_num_p"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CVV"
        android:layout_below="@id/card_num_p"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/nazad_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nazad"
        android:layout_below="@id/cvv_num_p"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
